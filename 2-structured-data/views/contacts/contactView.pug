extends ../base.pug

block content
  h3 Contact
    small

  .btn-group
    a(href=`/contacts/${contact.id}/edit`, class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit contact
    a(href=`/contacts/${contact.id}/delete`, class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete contact

  .media
    .media-body
      h4= contact.firstName
        | &nbsp;
        small= contact.lastName
      h5  #{contact.address ||'unknown'}
      h5  #{contact.city ||'unknown'}
      h5  #{contact.state ||'unknown'}
      p= contact.zip
